// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  code     String   @unique
  password String
  Common   Common?
  Entity   Entity?
  Maneger  Maneger?

  @@map("users")
}

model Common {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique @map("user_id") @db.ObjectId
  name      String
  cpf       String
  email     String     @unique
  address   String
  birthDate DateTime   @map("birth_date")
  Schedules Schedule[]

  @@map("commons")
}

model Entity {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  user      User        @relation(fields: [userId], references: [id])
  userId    String      @unique @map("user_id") @db.ObjectId
  name      String
  address   String
  role      EntityRoles @default(MATERNITY) @map("_role")
  Schedules Schedule[]

  @@map("entities")
}

enum EntityRoles {
  MATERNITY
  HEATH_CENTER
}

model Maneger {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @map("user_id") @db.ObjectId
  name   String

  @@map("manegers")
}

model Vaccine {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String     @unique
  batche   String
  Schedule Schedule[]

  @@map("vaccines")
}

model Schedule {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  vaccine    Vaccine        @relation(fields: [vaccineId], references: [id])
  vaccineId  String         @map("vaccine_id") @db.ObjectId
  entity     Entity         @relation(fields: [entityId], references: [id])
  entityId   String         @map("entity_id") @db.ObjectId
  patient    Common         @relation(fields: [patient_id], references: [id])
  patient_id String         @map("patient_id") @db.ObjectId
  date       DateTime
  status     ScheduleStatus @default(PROCESS)

  @@map("schedules")
}

enum ScheduleStatus {
  PROCESS
  COMPLETED
  REFUSED
}
